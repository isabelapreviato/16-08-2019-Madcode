<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/white">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txvResultado" android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:textAlignment="textEnd"
            android:textSize="90sp"/>
    <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnClear" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnMaisOuMenos"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/txvResultado"
            android:background="@drawable/botao" android:textSize="55sp"/>
    <Button
            android:text="+/-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnMaisOuMenos"
            app:layout_constraintStart_toEndOf="@+id/btnClear" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnPorCento" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/txvResultado" android:background="@drawable/botao"
            android:textSize="55sp"/>
    <Button
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnPorCento"
            app:layout_constraintStart_toEndOf="@+id/btnMaisOuMenos" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnDiv" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/txvResultado" android:background="@drawable/botao"
            android:textSize="55sp"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnDiv"
            app:layout_constraintStart_toEndOf="@+id/btnPorCento" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/txvResultado" android:background="@drawable/botao"
            android:textSize="55sp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnSeven"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnEight" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnClear" android:background="@drawable/botao"
            android:textSize="55sp"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnEight"
            app:layout_constraintStart_toEndOf="@+id/btnSeven" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnNine" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnMaisOuMenos" android:background="@drawable/botao"
            android:textSize="55sp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnNine"
            app:layout_constraintStart_toEndOf="@+id/btnEight" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnMulti" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPorCento" android:background="@drawable/botao"
            android:textSize="55sp"/>
    <Button
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnMulti" app:layout_constraintStart_toEndOf="@+id/btnNine"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/btnDiv"
            android:background="@drawable/botao" android:textSize="55sp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnFour"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnFive" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSeven" android:background="@drawable/botao"
            android:textSize="55sp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnFive"
            app:layout_constraintStart_toEndOf="@+id/btnFour" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnSix" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEight" android:background="@drawable/botao"
            android:textSize="55sp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnSix" app:layout_constraintStart_toEndOf="@+id/btnFive"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnLess"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/btnNine"
            android:background="@drawable/botao" android:textSize="55sp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnLess"
            app:layout_constraintStart_toEndOf="@+id/btnSix" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/botao" android:textSize="55sp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/btnMulti"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnOne"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnTwo" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFour" android:background="@drawable/botao"
            android:textSize="55sp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnTwo"
            app:layout_constraintStart_toEndOf="@+id/btnOne" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnThree" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFive" android:background="@drawable/botao"
            android:textSize="55sp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnThree" app:layout_constraintStart_toEndOf="@+id/btnTwo"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnPlus"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/btnSix"
            android:background="@drawable/botao" android:textSize="55sp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnPlus"
            app:layout_constraintStart_toEndOf="@+id/btnThree" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/botao" android:textSize="55sp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/btnLess"/>
    <Button
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnZero" app:layout_constraintStart_toStartOf="@+id/btnOne"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnComma"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/btnOne"
            android:background="@drawable/botao" android:textSize="55sp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text=","
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnComma"
            app:layout_constraintStart_toEndOf="@+id/btnZero" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnEqual" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTwo" android:background="@drawable/botao"
            android:textSize="55sp" android:layout_marginBottom="30dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:id="@+id/btnEqual"
            app:layout_constraintStart_toEndOf="@+id/btnComma" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/btnPlus" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnThree" android:background="@drawable/botao"
            android:textSize="55sp" android:layout_marginBottom="30dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>